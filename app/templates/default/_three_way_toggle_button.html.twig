{#
Default toggle position.

parameters:
    - toggle_position: position of toggle depending on website
#}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">

<div class="tw-toggle">
    <input  {% if toggle_position == 'notes_position' %}checked{% endif %}
            type="radio" name="toggle" value="false" onclick="location.href='{{ url('note_index') }}';">
    <label class="toggle toggle-yes">{{ 'label.notes'|trans }}</label>
    <!-- TODO kiedy zrobie todo CRUD prosze wlozyc-->
    <input
            type="radio" name="toggle" value="-1" onclick="location.href='{{ url('note_index') }}';">
    <label class="toggle toggle-yes">{{ 'label.to-do_list'|trans }}</label>
    <input  {% if toggle_position == 'category_position' %}checked{% endif %}
            type="radio" name="toggle" value="true" onclick="location.href='{{ url('category_index') }}';">
    <label class="toggle toggle-yes">{{ 'label.category_manager'|trans }}</label>
    <span></span>
</div>
